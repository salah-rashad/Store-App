<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingTop="8dp"
    android:paddingRight="16dp"
    android:paddingBottom="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/product_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="16dp"
        android:scaleType="centerCrop"
        app:civ_circle_background_color="@color/white"
        android:src="@drawable/product_default_image" />

    <TextView
        android:id="@+id/product_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/product_image"
        android:fontFamily="sans-serif-condensed-medium"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="18sp"
        tools:text="Product Name" />

    <TextView
        android:id="@+id/product_category_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_name_text_view"
        android:layout_toRightOf="@id/product_image"
        android:fontFamily="sans-serif-condensed-light"
        android:textSize="18sp"
        tools:text="Category" />

    <TextView
        android:id="@+id/product_in_stock_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/product_image"
        android:layout_toRightOf="@id/product_image"
        android:fontFamily="sans-serif-condensed-light"
        android:textAllCaps="true"
        android:textColor="@color/colorGreen1"
        android:textSize="14sp"
        tools:text="Available" />

    <TextView
        android:id="@+id/product_price_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/product_image"
        android:layout_toRightOf="@id/product_image"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="right"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        tools:text="49.9 EPG" />

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@color/transparentColor"
        android:scaleType="center"
        android:src="@drawable/ic_favorite_border_black_24dp"
        android:tint="@color/colorGrey1" />

</RelativeLayout>